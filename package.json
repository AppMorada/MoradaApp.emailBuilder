{
  "name": "emails",
  "scripts": {
    "build": "tsc -p . --noEmit && swc ./emails -d ./dist",
    "dev": "email dev",
    "format": "prettier --write",
    "lint:fix": "eslint --fix",
    "set-hooks": "husky",
    "pre-commit": "lint-staged --allow-empty",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "(src|tests|docs)/**/*.(tsx|jsx|ts|js)": [
      "pnpm format",
      "pnpm lint:fix"
    ]
  },
  "dependencies": {
    "@react-email/components": "0.0.18",
    "@react-email/render": "^0.0.15",
    "firebase-admin": "^12.1.1",
    "handlebars": "^4.7.8",
    "react": "^18.2.0",
    "react-email": "2.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "@babel/preset-react": "^7.24.6",
    "@commitlint/config-conventional": "^19.2.2",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.7",
    "@swc/helpers": "^0.5.11",
    "@types/node": "^22.2.0",
    "@types/react": "^18.2.33",
    "@types/react-dom": "18.2.14",
    "commitizen": "^4.3.0",
    "commitlint": "^19.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "swc-loader": "^0.2.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
